@model VidlyApp.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.MovieType.name</li>
    <li>Release Date: @Model.ReleasedDate</li>
    <li>Date Added: @Model.DateAdded</li>
    <li>Num in Stock: @Model.NumberInStock</li>
</ul>
